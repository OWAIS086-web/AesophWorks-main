@model AesophWorks.ViewModels.ItemActionViewModel
@{
    ViewBag.Title = "Action";
}
@if (Model != null)
{

    <div class="card">
        <div class="card-body">
            <h2 class="card-title">
                @if (Model.ID != 0)
                {
                    <span>Edit Item</span>
                }
                else
                {
                    <span>Save Item</span>
                }
            </h2>
            <hr />




            <form id="actionForm">
                <input type="hidden" id="ID" name="ID" value="@Model.ID" />
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group col-md-5">
                            <label class="col-sm-12">Item Name</label>
                            <input required class="form-control" id="Name" value="@Model.Name" name="Name" placeholder="Enter Name">
                        </div>  @*Name*@

                        <div class="form-group col-md-5">
                            <label class="col-sm-12">Juice Groove</label>
                            <select id="JuiceGroove" class="select2 form-select shadow-none select2-hidden-accessible" name="JuiceGroove">
                                @if (Model.ID != 0)
                                {
                                    if (Model.JuiceGroove == false)
                                    {
                                        <option selected value="No">No</option>
                                        <option value="Yes">Yes</option>

                                    }
                                    else
                                    {
                                        <option value="No">No</option>
                                        <option selected value="Yes">Yes</option>
                                    }
                                }
                                else
                                {
                                    <option value="Yes">Yes</option>
                                    <option value="No">No</option>
                                }
                            </select>

                        </div>  @*Juice Groove*@

                        <div class="form-group col-md-5">
                            <label class="col-sm-12">Item Type</label>
                            <select id="ItemType" class="select2 form-select shadow-none select2-hidden-accessible" name="ItemType">
                                @if (Model.ID != 0)
                                {
                                    foreach (var item in Model.ItemTypes)
                                    {
                                        if (item == Model.ItemType)
                                        {
                                            <option selected value="@item">@item</option>
                                        }
                                        else
                                        {
                                            <option value="@item">@item</option>

                                        }
                                    }
                                }
                                else
                                {
                                    foreach (var item in Model.ItemTypes)
                                    {
                                        <option value="@item">@item</option>
                                    }
                                }
                            </select>

                        </div>  @*Item Type*@

                        <div class="form-group col-md-5">
                            <label class="col-sm-12">Finger Groove</label>
                            <select id="FingerGroove" class="select2 form-select shadow-none select2-hidden-accessible" name="FingerGroove">
                                @if (Model.ID != 0)
                                {
                                    if (Model.FingerGroove == false)
                                    {
                                        <option selected value="No">No</option>
                                        <option value="Yes">Yes</option>

                                    }
                                    else
                                    {
                                        <option value="No">No</option>
                                        <option selected value="Yes">Yes</option>
                                    }
                                }
                                else
                                {
                                    <option value="Yes">Yes</option>
                                    <option value="No">No</option>
                                }
                            </select>

                        </div>  @*Finger Gorve*@

                        <div class="form-group col-md-5">
                            <label class="col-sm-12">Handles</label>
                            <select id="Handles" class="select2 form-select shadow-none select2-hidden-accessible" name="Handles">
                                @if (Model.ID != 0)
                                {
                                    if (Model.Handles == false)
                                    {
                                        <option selected value="No">No</option>
                                        <option value="Yes">Yes</option>

                                    }
                                    else
                                    {
                                        <option value="No">No</option>
                                        <option selected value="Yes">Yes</option>
                                    }
                                }
                                else
                                {
                                    <option value="Yes">Yes</option>
                                    <option value="No">No</option>
                                }
                            </select>

                        </div>  @*Handle*@

                        <div class="form-group col-md-5">
                            <label class="col-sm-12">Font</label>
                            <input required class="form-control" id="Font" value="@Model.Font" name="Font" placeholder="Enter Font">
                        </div>  @*Font*@

                        <div class="form-group col-md-5">
                            <label class="col-sm-12">Customization</label>
                            <input required class="form-control" id="Customization" value="@Model.Customization" name="Customization" placeholder="Enter Customization">
                        </div>  @*Customization*@

                        <div class="form-group col-md-5">
                            <label class="col-sm-12">Quantity</label>
                            <input required class="form-control" id="Quantity" value="@Model.Quantity" name="Quantity" placeholder="Enter Quantity">
                        </div>  @*Quantity*@

                        <div class="form-group col-md-5">
                            <label class="col-sm-12">Shape</label>
                            <input required class="form-control" id="Shape" value="@Model.Shape" name="Shape" placeholder="Enter Shape">
                        </div>  @*Shape*@

                        <div class="form-group col-md-5">
                            <label class="col-sm-12">Type Of Order</label>
                            <select id="TypeOfOrder" class="select2 form-select shadow-Custom Orderne select2-hidden-accessible" name="TypeOfOrder">
                                @if (Model.ID != 0)
                                {
                                    if (Model.TypeOfOrder == "Custom Order")
                                    {
                                        <option selected value="Custom Order">Custom Order</option>
                                        <option value="Standard Order">Standard Order</option>

                                    }
                                    else
                                    {
                                        <option value="Custom Order">Custom Order</option>
                                        <option selected value="Standard Order">Standard Order</option>
                                    }
                                }
                                else
                                {
                                    <option value="Standard Order">Standard Order</option>
                                    <option value="Custom Order">Custom Order</option>
                                }
                            </select>

                        </div>  @*TypeOfOrder*@

                        <div class="form-group col-md-5">
                            <label class="col-sm-12">Hanger</label>
                            <input required class="form-control" id="Hanger" value="@Model.Hanger" name="Hanger" placeholder="Enter Hanger">
                        </div>  @*Hanger*@

                        <div class="form-group col-md-5">
                            <label class="col-sm-12">Gift Box</label>
                            <select id="GiftBox" class="select2 form-select shadow-none select2-hidden-accessible" name="GiftBox">
                                @if (Model.ID != 0)
                                {
                                    if (Model.GiftBox == false)
                                    {
                                        <option selected value="No">No</option>
                                        <option value="Yes">Yes</option>

                                    }
                                    else
                                    {
                                        <option value="No">No</option>
                                        <option selected value="Yes">Yes</option>
                                    }
                                }
                                else
                                {
                                    <option value="Yes">Yes</option>
                                    <option value="No">No</option>
                                }
                            </select>

                        </div>  @*Gift Box*@


                    </div>
                </div>
                <br />
                @if (Model.ID != 0)
                {
                    <button id="actionButton" type="button" class="btn btn-outline-primary"><i class="fas fa-save mr-1"></i> Update</button>
                }
                else
                {
                    <button id="actionButton" type="button" class="btn btn-outline-primary "><i class="fas fa-save mr-1"></i> Save</button>
                }
                <a href="@Url.Action("Index","Item")" class="btn btn-outline-danger"> CANCEL</a>
            </form>
        </div>
    </div>






    <div class="errorDiv">

    </div>

}


<script>
    $("#actionButton").click(function () {
		$.ajax({
			url: '@Url.Action("Action", "Item")',
			type: "post",
			data: $("#actionForm").serialize()
		})
		.done(function () {

            window.location.href = "@Url.Action("Index","Item")";

		});
	});
</script>

