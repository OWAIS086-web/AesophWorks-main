@model AesophWorks.ViewModels.CuttingBoardActionViewModel

@if (Model != null)
{

    <div class="card">
        <div class="card-body">
            <h2 class="card-title">
                @if (Model.ID != 0)
                {
                    <span>Edit Cutting Board</span>
                }
                else
                {
                    <span>Save Cutting Board</span>
                }
            </h2>
            <hr />


            <!---------->
            <div class="row">
                <div class="col-md-6 col-lg-2 col-xlg-3">
                    <div class="card card-hover">
                        <div class="box bg-cyan text-center">
                            <a href="@Url.Action("CuttingBoard","Item")">

                                <h1 class="font-light text-white">
                                    <i class="mdi mdi-keyboard-return"></i>
                                </h1>
                                <h6 class="text-white">Back to Cutting Boards</h6>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-2 col-xlg-3">
                    <div class="card card-hover">
                        <div class="box bg-info text-center">
                            <a href="@Url.Action("Action","CuttingBoard")">

                                <h1 class="font-light text-white">
                                    <i class="mdi mdi-plus"></i>
                                </h1>
                                <h6 class="text-white">Add New Cutting Board</h6>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-2 col-xlg-3">
                    <div class="card card-hover">
                        <div class="box bg-danger text-center">
                            <a href="@Url.Action("CuttingBoard","Item")">

                                <h1 class="font-light text-white">
                                    <i class="mdi mdi-restart"></i>
                                </h1>
                                <h6 class="text-white">Reset</h6>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <!---------->

            <form id="actionForm">
                <input type="hidden" id="ID" name="ID" value="@Model.ID" />
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group col-md-5">
                            <label class="col-sm-12"></label>
                            <input required class="form-control" id="UserName" value="@Model.TypeOfCuttingBoard" name="UserName" placeholder="Enter UserName">
                        </div>

                        <div class="form-group col-md-5">
                            <label class="col-sm-3">Email</label>
                            <input required class="form-control" id="Email" type="email" value="@Model.Name" name="Email" placeholder="Enter Email">

                        </div>
                    </div>
                </div>


                <div class="form-group col-md-5">
                    <label class="col-sm-3">Contact</label>
                    <input required class="form-control" id="Contact" value="@Model.JuiceGroove" name="Contact" placeholder="Enter Contact Number">

                </div>

                <div class="form-group col-md-5">
                    <label class="col-sm-3">Password</label>
                    <input required class="form-control" id="Password" value="@Model.FingerGroove" name="Password" placeholder="Enter Password">

                </div>
                
                @if (Model.ID != 0)
                {
                    <div class="form-group col-md-5">
                        <label class="col-sm-3">Type of Cutting Board</label>
                        <select id="TypeofCuttingBoard" class="select2 form-select shadow-none select2-hidden-accessible" name="TypeOfCuttingBoard">
                            @if (Model.TypeOfCuttingBoard == "Edge Grain")
                            {
                                <option selected value="Edge Grain">Edge Grain</option>
                                <option value="EndGrain">End Grain</option>
                            }
                            else
                            {
                                <option  value="Edge Grain">Edge Grain</option>
                                <option selected value="EndGrain">End Grain</option>
                            }
                        </select>
                    </div>
                }
                else
                {
                    <div class="form-group col-md-5">
                        <label class="col-sm-3">Type of Cutting Board</label>
                        <select id="TypeofCuttingBoard" class="select2 form-select shadow-none select2-hidden-accessible" name="TypeofCuttingBoard">


                            <option value="Edge Grain">Edge Grain</option>
                            <option value="End Grain">End Grain</option>

                        </select>
                    </div>
                }
                <br />
                @if (Model.ID != 0)
                {
                    <button id="actionButton" type="button" class="btn btn-outline-primary"><i class="fas fa-save mr-1"></i> Update</button>
                }
                else
                {
                    <button id="actionButton" type="button" class="btn btn-outline-primary "><i class="fas fa-save mr-1"></i> Save</button>
                }
                <a href="@Url.Action("CuttingBoard","Item")" class="btn btn-outline-danger"> CANCEL</a>
            </form>
        </div>
    </div>






    <div class="errorDiv">

    </div>

}

