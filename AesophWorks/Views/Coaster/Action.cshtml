@model AesophWorks.ViewModels.CoasterActionViewModel

@if (Model != null)
{

    <div class="card">
        <div class="card-body">
            <h2 class="card-title">
                @if (Model.ID != 0)
                {
                    <span>Edit Coaster</span>
                }
                else
                {
                    <span>Save Coaster</span>
                }
            </h2>
            <hr />




            <form id="actionForm">
                <input type="hidden" id="ID" name="ID" value="@Model.ID" />
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group col-md-5">
                            <label class="col-sm-12">Coaster</label>
                            <input required class="form-control" id="Name" value="@Model.Name" name="Name" placeholder="Enter Name">
                        </div>

                        <div class="form-group col-md-5">
                            <label class="col-sm-3">Font</label>
                            <input required class="form-control" id="TypeOfCoaster" value="@Model.Font" name="Font" placeholder="Enter Font">

                        </div>
                    </div>
                </div>


                <div class="form-group col-md-5">
                    <label class="col-sm-3">Customization</label>
                    <input required class="form-control" id="Customization" value="@Model.Customization" name="Customization" placeholder="Enter Customization">

                </div>


                <div class="form-group col-md-5">
                    <label class="col-sm-3">Quantity</label>
                    <input required class="form-control" id="Shape" value="@Model.Shape" name="Shape" placeholder="Enter Shape">

                </div>





                <br />
                @if (Model.ID != 0)
                {
                    <button id="actionButton" type="button" class="btn btn-outline-primary"><i class="fas fa-save mr-1"></i> Update</button>
                }
                else
                {
                    <button id="actionButton" type="button" class="btn btn-outline-primary "><i class="fas fa-save mr-1"></i> Save</button>
                }
                <a href="@Url.Action("Coasters","Item")" class="btn btn-outline-danger"> CANCEL</a>
            </form>
        </div>
    </div>






    <div class="errorDiv">

    </div>

}


<script>
    $("#actionButton").click(function () {
		$.ajax({
			url: '@Url.Action("Action", "Coaster")',
			type: "post",
			data: $("#actionForm").serialize()
		})
		.done(function () {

            window.location.href = "@Url.Action("Coasters","Item")";

		});
	});
</script>
