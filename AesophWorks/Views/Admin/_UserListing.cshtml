@model AesophWorks.ViewModels.UsersListingViewModel
@{
    ViewBag.Title = "_UserListing";
}
<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        @if (Model.Users != null)
        {
            <div class="card">

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>

                                <th>
                                    Name
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Contact
                                </th>
                                <th>
                                    Role
                                </th>

                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Users)
                            {
                                <tr>
                                    <td>@item.UserName</td>
                                    <td>@item.Email</td>
                                    <td>@item.Contact</td>
                                    <td>@item.Role</td>
                                    <td>
                                        <a href="@Url.Action("UserAction", "Admin", new { ID = item.ID })" type="button" class="data-btn btn btn-outline-info btn-icon-text" ><i class="mdi mdi-pencil"></i> EDIT</a>
                                        <a href="@Url.Action("DeleteUser", "Admin", new { ID = item.ID })" type="button" class="data-btn btn btn-outline-danger btn-icon-text"><i class="mdi mdi-delete"></i>DELETE</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {

            <div class="alert alert-warning col-md-12" role="alert">
                Sorry! No records exist.
            </div>
        }
    </div>
</div>